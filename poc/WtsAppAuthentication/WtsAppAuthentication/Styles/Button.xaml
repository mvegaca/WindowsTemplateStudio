<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="BaseLoginButtonStyle">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="Button" x:Key="FacebookLoginButtonStyle" BasedOn="{StaticResource BaseLoginButtonStyle}">
        <Setter Property="Background" Value="{StaticResource FacebookBlueBrush}" />
    </Style>
    <Style TargetType="Button" x:Key="GoogleLoginButtonStyle" BasedOn="{StaticResource BaseLoginButtonStyle}">
        <Setter Property="Background" Value="{StaticResource GoogleRedBrush}" />
    </Style>
    <Style TargetType="Button" x:Key="EmailLoginButtonStyle" BasedOn="{StaticResource BaseLoginButtonStyle}">
        <Setter Property="Background" Value="{StaticResource LoginGreenBrush}" />
    </Style>

</ResourceDictionary>
